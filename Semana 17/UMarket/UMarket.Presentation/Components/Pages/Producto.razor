@page "/productos"
@using UMarket.Application.DTO
@inject UMarket.Application.Contracts.IProductoService ProductoService
@inject UMarket.Application.Contracts.ICategoriaService CategoriaService

<h3>Productos</h3>

@if (isLoading)
{
    <p>Cargando...</p>
}
else
{
    <div class="mb-4">
        <EditForm Model="createDto" OnValidSubmit="CreateProductoAsync">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="row g-2">
                <div class="col-md-4">
                    <label class="form-label">Nombre</label>
                    <InputText class="form-control" @bind-Value="createDto.Nombre" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Descripción</label>
                    <InputText class="form-control" @bind-Value="createDto.Descripcion" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Precio</label>
                    <InputNumber class="form-control" @bind-Value="createDto.Precio" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Stock</label>
                    <InputNumber class="form-control" @bind-Value="createDto.Stock" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Categoría</label>
                    <InputSelect class="form-select" @bind-Value="createDto.CategoriaId">
                        <option value="0">-- Seleccionar --</option>
                        @foreach (var cat in categorias)
                        {
                            <option value="@cat.Id">@cat.Nombre</option>
                        }
                    </InputSelect>
                </div>
                <div class="col-md-12 d-flex justify-content-end mt-2">
                    <button class="btn btn-primary" type="submit">Crear producto</button>
                </div>
            </div>
        </EditForm>
    </div>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert @messageClass">@message</div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Categoría</th>
                <th style="width:220px">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in productos)
            {
                <tr>
                    <td>
                        @if (editingId == p.Id)
                        {
                            <InputText class="form-control" @bind-Value="editingDto.Nombre" />
                        }
                        else
                        {
                            @p.Nombre
                        }
                    </td>
                    <td>
                        @if (editingId == p.Id)
                        {
                            <InputText class="form-control" @bind-Value="editingDto.Descripcion" />
                        }
                        else
                        {
                            @p.Descripcion
                        }
                    </td>
                    <td>
                        @if (editingId == p.Id)
                        {
                            <InputNumber class="form-control" @bind-Value="editingDto.Precio" />
                        }
                        else
                        {
                            @p.Precio.ToString("C")
                        }
                    </td>
                    <td>
                        @if (editingId == p.Id)
                        {
                            <InputNumber class="form-control" @bind-Value="editingDto.Stock" />
                        }
                        else
                        {
                            @p.Stock
                        }
                    </td>
                    <td>
                        @if (editingId == p.Id)
                        {
                            <InputSelect class="form-select" @bind-Value="editingDto.CategoriaId">
                                <option value="0">-- Seleccionar --</option>
                                @foreach (var cat in categorias)
                                {
                                    <option value="@cat.Id">@cat.Nombre</option>
                                }
                            </InputSelect>
                        }
                        else
                        {
                            @GetCategoriaNombre(p.CategoriaId)
                        }
                    </td>
                    <td>
                        @if (editingId == p.Id)
                        {
                            <button class="btn btn-success btn-sm me-2" @onclick="() => SaveEditAsync(p.Id)">Guardar</button>
                            <button class="btn btn-secondary btn-sm" @onclick="CancelEdit">Cancelar</button>
                        }
                        else
                        {
                            <button class="btn btn-outline-primary btn-sm me-2" @onclick="() => StartEdit(p)">Editar</button>
                            <button class="btn btn-outline-danger btn-sm" @onclick="() => ConfirmDelete(p.Id, p.Nombre)">Eliminar</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (showDeleteConfirm)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar eliminación</h5>
                    <button type="button" class="btn-close" @onclick="CloseDeleteConfirm"></button>
                </div>
                <div class="modal-body">
                    <p>¿Eliminar el producto <strong>@deleteTargetName</strong>?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseDeleteConfirm">Cancelar</button>
                    <button class="btn btn-danger" @onclick="DeleteAsync">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<ProductoDto> productos = new();
    private List<CategoriaDto> categorias = new();
    private ProductoCreateDto createDto = new();
    private ProductoUpdateDto editingDto = new();
    private int? editingId;
    private bool isLoading = true;
    private string? message;
    private string messageClass = "alert-info";

    // Confirmación de eliminación
    private bool showDeleteConfirm;
    private int deleteTargetId;
    private string? deleteTargetName;

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        isLoading = true;
        message = null;
        try
        {
            productos = await ProductoService.GetAllAsync();
            categorias = await CategoriaService.GetAllAsync();
        }
        catch (Exception ex)
        {
            message = "Error cargando datos: " + ex.Message;
            messageClass = "alert-danger";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CreateProductoAsync()
    {
        message = null;
        try
        {
            if (createDto.CategoriaId == 0)
            {
                message = "Seleccione una categoría.";
                messageClass = "alert-warning";
                return;
            }

            var id = await ProductoService.CreateAsync(createDto);
            message = "Producto creado correctamente.";
            messageClass = "alert-success";
            createDto = new ProductoCreateDto();
            await LoadAsync();
        }
        catch (Exception ex)
        {
            message = "Error creando producto: " + ex.Message;
            messageClass = "alert-danger";
        }
    }

    private void StartEdit(ProductoDto p)
    {
        editingId = p.Id;
        editingDto = new ProductoUpdateDto
        {
            Nombre = p.Nombre,
            Descripcion = p.Descripcion,
            Precio = p.Precio,
            CategoriaId = p.CategoriaId,
            Stock = p.Stock
        };
        message = null;
    }

    private void CancelEdit()
    {
        editingId = null;
        editingDto = new ProductoUpdateDto();
    }

    private async Task SaveEditAsync(int id)
    {
        message = null;
        try
        {
            if (editingDto.CategoriaId == 0)
            {
                message = "Seleccione una categoría para el producto.";
                messageClass = "alert-warning";
                return;
            }

            var ok = await ProductoService.UpdateAsync(id, editingDto);
            if (ok)
            {
                message = "Producto actualizado.";
                messageClass = "alert-success";
                editingId = null;
                await LoadAsync();
            }
            else
            {
                message = "No se encontró el producto para actualizar.";
                messageClass = "alert-warning";
            }
        }
        catch (Exception ex)
        {
            message = "Error actualizando producto: " + ex.Message;
            messageClass = "alert-danger";
        }
    }

    private void ConfirmDelete(int id, string nombre)
    {
        deleteTargetId = id;
        deleteTargetName = nombre;
        showDeleteConfirm = true;
    }

    private void CloseDeleteConfirm()
    {
        showDeleteConfirm = false;
        deleteTargetId = 0;
        deleteTargetName = null;
    }

    private async Task DeleteAsync()
    {
        message = null;
        try
        {
            var ok = await ProductoService.DeleteAsync(deleteTargetId);
            if (ok)
            {
                message = "Producto eliminado.";
                messageClass = "alert-success";
                await LoadAsync();
            }
            else
            {
                message = "No se encontró el producto para eliminar.";
                messageClass = "alert-warning";
            }
        }
        catch (Exception ex)
        {
            message = "Error eliminando producto: " + ex.Message;
            messageClass = "alert-danger";
        }
        finally
        {
            CloseDeleteConfirm();
        }
    }

    private string GetCategoriaNombre(int categoriaId)
    {
        var cat = categorias.FirstOrDefault(c => c.Id == categoriaId);
        return cat != null ? cat.Nombre : "Sin categoría";
    }
}